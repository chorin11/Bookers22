<div class="body">
  <div class="container">
    <div class="row">

        <div class="col-xs-3">
          <h2>User info</h2>
              <table class="table">
                <tbody>
                  <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size: "100x100" %></tr>
                  <tr>
                    <td>name</td>
                    <td><%= @user.name %></td>
                  </tr>
                  <tr>
                    <td>introduction</td>
                    <td><%= @user.introduction %></td>
                  </tr>
                </tbody>
              </table>

    <%= link_to "", edit_user_path(@user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

  <%= render 'books/newbook', book: @book %>
</div>


    <div class="col-xs-9">
      <h2>Users</h2>
        <table class="table table-hover table-inverse">
    	   <thead>
    		    <tr>
    			   <th>image</th><th>name</th>
    		    </tr>
    	   </thead>

        <% @users.each do |user| %>
          <tr>
            <div>
              <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.png" %></td>
            </div>
            <div>
          	 <td><%= user.name %></td>
            </div>
            <span>
              <td><%=link_to "Show" ,user_path(user.id) %></td>
            </span>
          </tr>
        <% end %>
      </table>
    </div>
    </div>
  </div>
</div>

