<h1>Editing Book</h1>
	<% if @book.errors.any? %>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message+"error" %></li>
        <% end %>
      </ul>
    <% end %>

	<%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Opinion</h4>
		<%= f.text_field :body %>

		<%= f.submit 'Update Book' %>

		<%=link_to "Show" ,book_path %>
		<%=link_to "Back" ,books_path %>

	<% end %>

