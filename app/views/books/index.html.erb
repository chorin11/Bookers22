<div class="body">
  <div class="container">
    <div class="row">

        <div class="col-xs-3">
          <h2>User info</h2>
            <img class="attachment user profile_image fallback">
              <table class="table">
                <tbody>
                  <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size: "100x100"%></tr>
                  <tr>
                    <td>name</td>
                    <td><%= @user.name %></td>
                  </tr>
                  <tr>
                    <td>introduction</td>
                    <td><%= @user.introduction %></td>
                  </tr>
                </tbody>
              </table>

    <%= link_to "", edit_user_path(@user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

  <%= render 'books/newbook', book: @book %>
</div>

    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
    	   <thead>
    		    <tr>
    			   <th>Title</th><th>Opinion</th>
    		    </tr>
    	   </thead>

        <% @books.each do |book| %>
          <tr>
            <div>
              <td><%= link_to (attachment_image_tag book.user,:profile_image, :fill, 60, 60, fallback: "no_image.png", size: "40x40") ,user_path(book.user) %></td>
            </div>
            <div>
              <td></td>
            </div>
            <div>
              <td><%= link_to "#{book.title}" ,book_path(book.id) %></td>
            </div>
            <div>
          	 <td><%= book.body %></td>
            </div>
          </tr>
        <% end %>
      </table>
    </div>
    </div>
  </div>
</div>